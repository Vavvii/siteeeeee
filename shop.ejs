<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flower Shop</title>
    <link rel="stylesheet" href="/css/style.css">
    <script defer src="/js/scripts.js"></script>
</head>
<body>
    <header>
        <h1>Flower Shop</h1>
        <nav>
            <ul>
                <li><a href="/shop">Главная</a></li>
                <% if (user) { %>
                    <li><a href="/admin">Admin Panel</a></li>
                    <li><a href="/logout">Выход</a></li>
                <% } else { %>
                    <li><a href="/login">Войти</a></li>
                <% } %>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h2>Наш товар</h2>
            <div id="filter-section">
                <label for="filter">Фильтровать по названию:</label>
                <input type="text" id="filter">
                <button id="show-all-btn">Show All</button>
            </div>
            <div class="products">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <img src="<%= product.image %>" alt="<%= product.name %>" style="hight: 300px; width: 300px;">
                        <h3><%= product.name %></h3>
                        <p><%= product.description %></p>
                        <p  id="cost">Price: $<%= product.price %></p>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>
</body>
</html>
